{
  "name": "mywordapp",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac dmg --win nsis"
  },
  "build": {
    "appId": "com.example.mywordapp",
    "productName": "MyWordApp",
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "files": [
      "**/*"
    ]
  },
  "devDependencies": {
    "electron": "^28.1.1",
    "electron-builder": "^24.6.0"
  }
}